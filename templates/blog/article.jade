extends ../layout
include author

block prepend title
  | #{ page.title + ' - ' }

block header
  .blog-header

block content
  .content
    .row
      .col-md-8(class='col-md-offset-2')
        h1.centered= page.title
        p.author
          +author(page.metadata.author)
          |  on 
          = moment.utc(page.metadata.date).format('MMMM DD, YYYY')
        p.article
          != typogr(page.html).typogrify()
